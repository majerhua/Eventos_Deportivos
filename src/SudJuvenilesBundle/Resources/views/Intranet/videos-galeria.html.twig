
<div class="count">
    <span class="label label-primary">
        <b>Videos en total:</b> {{ pagination.getTotalItemCount }}
    </span>
</div>
<br/>

<div class="row">
 
    {% for entry in pagination %}
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <div class="d-flex justify-content-end bg-dark" style="padding:8px 10px 4px 0;">
                <i class="fas fa-edit" style="color:white;cursor:pointer;" title="Editar" data-toggle="modal" data-target="#modal-editar-video" onclick="obtenerInformaciongaleriaVideoModificar({{entry['id']}})"></i>&nbsp;&nbsp;&nbsp;
                <i  class="fas fa-trash-alt" style="color:white;cursor:pointer;" title="Eliminar" onclick="galeriaVideoEliminar({{entry['id']}})"  data-toggle="modal" data-target="#modal-eliminar-galeriaVideo"></i>
            </div>
            <div class="container-escenario-item card">
                {% set  arrayFechaGrabo =  entry.video_url|split('=') %} 
                {% set  keyVideo =  arrayFechaGrabo[1] %}

                <div class="embed-responsive embed-responsive-16by9">

                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{keyVideo}}"
                            frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    <div class="img-container">
                        <p class="card-text">{{entry.fecha_grabo_video}}</p>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

</div>

{# display navigation #}
<div class="navigation">
        {{ knp_pagination_render(pagination) }}
</div>



