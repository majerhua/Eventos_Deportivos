    {% include 'SudJuvenilesBundle:Default:footer.html.twig' %} 




    <div class="modal fade" id="modal-nuevo-resultado" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content">

                <form id="submit_form_guardar" action="#" enctype="multipart/form-data">

                    <div class="modal-header header-modal container-header-yellow">

                        <h4 class="modal-title">Publica un nuevo resultado</h4>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                            <span aria-hidden="true" style="color:white;">&times;</span>

                        </button>

                    </div>

                    <div class="modal-body">

                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                                <div id="alerta-error" class="alert alert-danger collapse text-center"></div>

                                <ul class="list-group">

                                    <li class="list-group-item">

                                        <div class="row">

                                            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">

                                                <p><span style="color:#B31A12">*</span><strong> Foto:</strong></p>

                                            </div>

                                            <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">

                                                <div class="form-group">

                                                    <input type="file" class="form-control-file" name="fileResultado" id="fileResultado" required="true" accept="image/*">

                                                </div>

                                            </div>

                                        </div>

                                    </li>

                                    <li class="list-group-item">

                                        <div class="row">

                                            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">

                                                <p><span style="color:#B31A12">*</span><strong> Titulo:</strong></p>

                                            </div>

                                            <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">

                                                <input id="tituloResultado" class="form-control"  name="tituloResultado" type="text" required="true">

                                            </div>

                                        </div>

                                    </li>

                                    <li class="list-group-item">
                
                                        <div class="row">
                
                                            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                
                                                <p><span style="color:#B31A12">*</span><strong> Fecha:</strong></p>
                
                                            </div>
                
                                            <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">
                
