                            </div>
    
                            <div class="col">
    
                                <button class="btn btn-danger btn-block" id="btnConfElimResultado">Aceptar</button>
    
                            </div>
    
                        </div>
    
                    </div>
    
                </div>
    
            </div>
    
        </div>
    
    </div>

    <div class="modal fade" id="modal-image" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg">
    
            <div class="modal-content">

                <img id="img-modal" class="img-fluid">

            </div>
        
        </div>
    
    </div>

{% endblock %}

{% block javascripts %}

    <script>

        $('[data-toggle="tooltip"]').tooltip();

        $('#submit_form_guardar').on("submit", function (e) {
            
            e.preventDefault();

            var obj = new FormData($("#submit_form_guardar")[0]);
            
            $.ajax({
                url: "{{url('galeriaRegistrarResultado')}}",
                type: 'POST',
                data: obj,
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se registro Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de Registrar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });

        });

        $("#btnConfElimResultado").on('click',function(){

            $.ajax({
                url: "{{url('galeriaEliminarResultado')}}",
                type: 'POST',
                data:{'galeriaResultId':$("#elimGaleriaResultId").val()},
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se elimino Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de Eliminar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });

        });

        const galeriaResultEliminar = function(galeriaResultId){
            $("#elimGaleriaResultId").val(galeriaResultId);
        };

        //OBTENER INFORMACION GALERIA PARA MODIFICAR
        const obtenerInformaciongaleriaResultModificar = function(galeriaResultId){

            $("#editResultadoGaleriaId").val(galeriaResultId);

            $.ajax({
                url: "{{url('galeriaObtenerResultado')}}",
                type: 'POST',
                data:{'galeriaResultId':galeriaResultId},
                beforeSend: function() {
                },
                success: function(data) {
                    datos = JSON.parse(data)[0];
                    console.log(datos);

                    $("#editTituloResultado").val(datos.titulo);
                    $("#editFechaResultado").val(datos.fecha_tomo_foto);
                    $("#editDisciplinaResultado").val(datos.disciplinaId);
                    $("#editDescripcionResultado").val(datos.descripcion_foto);

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        };

        $('#submit_form_editar').on("submit", function (e) {
            
            e.preventDefault();

            var obj = new FormData($("#submit_form_editar")[0]);
            
            $.ajax({
                url: "{{url('galeriaEditarResultado')}}",
                type: 'POST',
                data: obj,
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se actualizo Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de actualizar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });

        function imageModal(img){

            $('#modal-image').modal('show');
            $('#img-modal').attr('src', img.src);
            
        }



        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth()+1;
        var yyyy = today.getFullYear();
        if(dd<10){
            dd='0'+dd
        } 
        if(mm<10){
            mm='0'+mm
        } 

        today = yyyy+'-'+mm+'-'+dd;

        $("#fechaResultado").attr("max", today);
        $("#editFechaResultado").attr("max", today);

    </script>

{% endblock %}