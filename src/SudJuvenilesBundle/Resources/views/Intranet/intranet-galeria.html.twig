                    <div class="container">

                        <div class="row justify-content-md-center">

                            <div class="col-lg-5">

                                <br>

                                <img src="{{asset('assets/images/trash.png')}}" class="img-fluid">

                                <br>
                                <br>
                                <br>

                            </div>

                        </div>

                        <div class="row">

                            <div class="col">

