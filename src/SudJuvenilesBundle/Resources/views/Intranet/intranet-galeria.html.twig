                            </div>

                            <div class="col">

                                <button class="btn btn-danger btn-block" id="btnConfElimFoto">Aceptar</button>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="modal fade" id="modal-image" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg">
    
            <div class="modal-content">

                <img id="img-modal" class="img-fluid">

            </div>
        
        </div>
    
    </div>
    
{% endblock %}

{% block javascripts %}

    <script>

        $('#submit_form_editar').on("submit",function(e) {
            
            e.preventDefault();

            var obj = new FormData($("#submit_form_editar")[0]);
            
            $.ajax({
                url: "{{url('galeriaEditarFoto')}}",
                type: 'POST',
                data: obj,
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se actualizo Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de actualizar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });

        const galeriaFotoEliminar = function(galeriaResultId){
            $("#elimGaleriaFotoId").val(galeriaResultId);
        };

        $("#btnConfElimFoto").on('click',function(){

            $.ajax({
                url: "{{url('galeriaEliminarFoto')}}",
                type: 'POST',
                data:{'galeriaFotId':$("#elimGaleriaFotoId").val()},
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se elimino Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de Eliminar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });



        //OBTENER INFORMACION GALERIA PARA MODIFICAR
        const obtenerInformaciongaleriaFotoModificar = function(galeriaFotoId){

            $("#editFotodoGaleriaId").val(galeriaFotoId);

            $("#editTituloFoto").val('');
            $("#editFechaFoto").val('');
            $("#editDescripcionFoto").val('');

            $.ajax({
                url: "{{url('galeriaObtenerFoto')}}",
                type: 'POST',
                data:{'galeriaFotoId':galeriaFotoId},
                beforeSend: function() {
                },
                success: function(data) {
                    datos = JSON.parse(data)[0];
                    console.log(datos);

                    $("#editTituloFoto").val(datos.titulo);
                    $("#editFechaFoto").val(datos.fecha_tomo_foto);
                    $("#editDescripcionFoto").val(datos.descripcion_foto);

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        };

        $('[data-toggle="tooltip"]').tooltip();
        
        $('#submit_form_guardar').on("submit",function(e) {
            
            e.preventDefault();

            var obj = new FormData($("#submit_form_guardar")[0]);
            
            $.ajax({
                url: "{{url('galeriaRegistrarFoto')}}",
                type: 'POST',
                data: obj,
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se registro Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de Registrar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });

        
        function imageModal(img){

            $('#modal-image').modal('show');
            $('#img-modal').attr('src', img.src);

        }

    </script>
{% endblock %}