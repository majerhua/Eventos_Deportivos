    <div class="modal fade" id="modal-nueva-foto" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content">

                <form id="submit_form_guardar" action="#" enctype="multipart/form-data" method="POST">

