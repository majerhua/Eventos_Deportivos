<div class="count">

    <p>Fotos en total <span class="badge badge-info">  {{ pagination.getTotalItemCount }}</span></p>
        
</div>

<br>

<div class="row">
    
    {% for entry in pagination %}

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            
            <div class="card" style="margin-bottom: 16px;">

                <div class="container-escenario-item">
                    
                    <img src="{{asset(entry['foto_url'])}}" alt="Notebook" style="width:100%;" onclick="imageModal(this)">

                    <div class="img-container">

                        <p class="card-title"><strong> {{entry['titulo']}}</strong></p>

                        <p class="card-text">{{entry['descripcion_foto']}}</p>

                    </div>
            
                </div>
            
                <div class="d-flex justify-content-end bg-light" style="padding-right: 8px;">

                    <i class="fas fa-edit" style="color:#424242; cursor:pointer;" title="Editar" data-toggle="modal" data-target="#modal-editar-foto" onclick="obtenerInformaciongaleriaFotoModificar({{entry['id']}})" ></i>&nbsp;&nbsp;&nbsp;

                    <i  class="fas fa-trash-alt" style="color:#424242; cursor:pointer;" title="Eliminar"  onclick="galeriaFotoEliminar({{entry['id']}})"  data-toggle="modal" data-target="#modal-eliminar-galeriaFoto"></i>

                </div>

            </div>      

        </div>

    {% endfor %}

</div>

{# display navigation #}
<div class="navigation">

    {{ knp_pagination_render(pagination) }}

</div>