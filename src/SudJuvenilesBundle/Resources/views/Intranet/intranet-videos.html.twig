{% extends '::base.html.twig' %}
{% block title %}Sudamericanos Juveniles{% endblock %}
{% block body  %}

    {% include 'SudJuvenilesBundle:Default:loader.html.twig' %} 
    {% include 'SudJuvenilesBundle:Default:menu_intranet.html.twig' %}

    <div class="section-title">
        <div class="container">
            <h1 class="text-center container-header-orange card">Videos</h1>
        </div>
    </div>


    <section class="section-white">

        <div class="container">
            {% include 'SudJuvenilesBundle:Intranet:videos-galeria.html.twig' %}
            <br>
            <br>

            <div class="text-right">
                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#modal-nueva-video">Publicar
                    video</button>
            </div>

        </div>

    </section>


<div class="modal fade" id="modal-nueva-video" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg" role="document">

                <div class="modal-content">
                    <div class="modal-header header-modal container-header-yellow">

                        <h4 class="modal-title">Publica un nuevo video</h4>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" style="color:white;">&times;</span>
                        </button>

                    </div>

                    <div class="modal-body">

                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                                <div id="alerta-error" class="alert alert-danger collapse text-center"></div>

                                    <form id="submit_form_guardar" action="#" enctype="multipart/form-data" method="POST" >

                                        <ul class="list-group">

                                            <li class="list-group-item">

                                                <div class="row"  >

                                                    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">

                                                        <p><span style="color:#B31A12">*</span><strong> Link Video:</strong></p>
                                                    </div>

                                                    <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">

                                                        <div class="form-group">
                                                            <input type="text" class="form-control"  name="linkVideo" id="linkVideo">
                                                        </div>

                                                    </div>

                                                </div>
                                            </li>

                                            <li class="list-group-item">
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                                                        <p><span style="color:#B31A12">*</span><strong> Fecha:</strong></p>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">
                                                        <input id="fechaVideo" name="fechaVideo" class="form-control" type="date">
                                                    </div>
                                                </div>
                                            </li>

                                        </ul>
                                    </form>
                                <br>

                                <span style="color:#B31A12; font-size:12px;">(*) Campos obligatorios.</span><br>
                                <span style="color:grey; font-size:12px;"> Los formatos válidos en las imágenes son:
                                    'png', 'jpg' o 'jpeg'. Peso máximo de 5M. </span>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">

                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button id="btn_guardar" type="button" class="btn btn-success">Publicar</button>

                    </div>
                </div>
            
        </div>
</div>

<div class="modal fade" id="modal-editar-video" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg" role="document">

                <div class="modal-content">
                    <div class="modal-header header-modal container-header-yellow">

                        <h4 class="modal-title">Edita el video seleccionado</h4>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" style="color:white;">&times;</span>
                        </button>

                    </div>

                    <div class="modal-body">

                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                                <div id="alerta-error" class="alert alert-danger collapse text-center"></div>

                                    <form id="submit_form_editar" action="#" enctype="multipart/form-data" method="POST" >

                                        <ul class="list-group">

                                            <li class="list-group-item">

                                                <div class="row">

                                                    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                                                        <p><span style="color:#B31A12">*</span><strong> Link Video:</strong></p>
                                                    </div>
                                                    <input type="hidden" name="editVideoGaleriaId" id="editVideoGaleriaId" >
                                                    <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">

                                                        <div class="form-group">
                                                            <input type="text" class="form-control"  name="editLinkVideo" id="editLinkVideo">
                                                        </div>

                                                    </div>

                                                </div>
                                            </li>

                                            <li class="list-group-item">
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                                                        <p><span style="color:#B31A12">*</span><strong> Fecha:</strong></p>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">
                                                        <input id="editFechaVideo" name="editFechaVideo" class="form-control" type="date">
                                                    </div>
                                                </div>
                                            </li>

                                        </ul>
                                    </form>
                                <br>

                                <span style="color:#B31A12; font-size:12px;">(*) Campos obligatorios.</span><br>
                                <span style="color:grey; font-size:12px;"> Los formatos válidos en las imágenes son:
                                    'png', 'jpg' o 'jpeg'. Peso máximo de 5M. </span>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">

                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button id="btn_editar" type="button" class="btn btn-success">Publicar</button>

                    </div>
                </div>
            
        </div>
</div>


<div class="modal fade" id="modal-eliminar-galeriaVideo" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-center" style="font-size:1.1em;">Desea eliminar Video?</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="hidden" name="elimGaleriaVideoId" id="elimGaleriaVideoId">
                            <button class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                        </div>
                        <div class="col-lg-6">
                            <button class="btn btn-danger" id="btnConfElimVideo">Aceptar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 {% include 'SudJuvenilesBundle:Default:footer.html.twig' %} 

{% endblock %}


{% block javascripts %}

    <script>

        $('[data-toggle="tooltip"]').tooltip();
        $('#btn_guardar').click( function () {

            var obj = new FormData($("#submit_form_guardar")[0]);
            
            $.ajax({
                url: "{{url('galeriaRegistrarVideo')}}",
                type: 'POST',
                data: obj,
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function() {
                },
                success: function(data) {
                    if(data == 1){
                        alertify.success('<p style="color:white">Se registro Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de Registrar.</p>')
                    }
                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });

        $("#btnConfElimVideo").on('click',function(){

            var datos = {'galeriaVideoId':$("#elimGaleriaVideoId").val()};

            $.ajax({
                url: "{{url('eliminarVideoGaleria')}}",
                type: 'POST',
                data:datos,
                beforeSend: function() {
                    console.log(datos);
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se elimino Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de Eliminar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });

        const galeriaVideoEliminar = function(galeriaVideoId){
            $("#elimGaleriaVideoId").val(galeriaVideoId);
        };

        //OBTENER INFORMACION GALERIA PARA MODIFICAR
        const obtenerInformaciongaleriaVideoModificar = function(galeriaVideoId){

            $("#editVideoGaleriaId").val(galeriaVideoId);

            $.ajax({
                url: "{{url('galeriaObtenerVideo')}}",
                type: 'POST',
                data:{'galeriaVideoId':galeriaVideoId},
                beforeSend: function() {
                },
                success: function(data) {

                    datos = JSON.parse(data)[0];
                    $("#editLinkVideo").val(datos.video_url)
                    $("#editFechaVideo").val(datos.fecha_grabo_video);

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        };

        $('#btn_editar').click( function () {

            var obj = new FormData($("#submit_form_editar")[0]);
            
            $.ajax({
                url: "{{url('galeriaEditarVideo')}}",
                type: 'POST',
                data: obj,
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function() {
                },
                success: function(data) {

                    if(data == 1){
                        alertify.success('<p style="color:white">Se actualizo Correctamente.</p>');
                        setTimeout(function(){ location.reload(true) }, 1000);
                        
                    }else if(data == 0){
                        alertify.warning('<p style="color:black">Ocurrio un Error a la hora de actualizar.</p>')
                    }

                },
                error: function (error) {
                    alertify.error('Error Sistema');
                }
            });
        });

    </script>
{% endblock %}
